# Environment Configuration for EPUB to Mindmap Converter

# OPTIONAL: OpenAI API Key (can also be entered in web interface)
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OPTIONAL: Flask Configuration
SECRET_KEY=your_secret_key_here_for_production
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0

# OPTIONAL: File Upload Configuration
MAX_FILE_SIZE_MB=100
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs

# OPTIONAL: AI Model Configuration
DEFAULT_AI_MODEL=gpt-4o-mini
DEFAULT_MINDMAP_TYPE=comprehensive

# DEPLOYMENT: Port Configuration (auto-set by most platforms)
# PORT=5000
